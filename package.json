{
  "name": "lighthouse-circleci-example",
  "version": "0.1.8",
  "private": true,
  "dependencies": {
    "@aws-amplify/cli": "^3.11.0",
    "aws-amplify": "^1.1.40",
    "aws-amplify-react": "^2.4.4",
    "axios": "^0.19.0",
    "circle-github-bot": "^2.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^3.2.0",
    "lighthouse": "^5.5.0",
    "puppeteer": "^1.20.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:lighthouse": "LIGHTHOUSE_URL=https://staging.nathanvale.dev jest --config ./lighthouse/jest.config.js --verbose --runInBand",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "lighthouse": {
    "requiredScores": {
      "performance": 95,
      "accessibility": 90,
      "best-practices": 80,
      "seo": 90,
      "bundle-size": 100
    },
    "maxBundleSizeKb": 250,
    "jsBundleRegex": "/static/js/[^(main)].*chunk\\.js"
  }
}
